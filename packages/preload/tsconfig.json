{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@syn-types/*": ["../../types/@syn-types/*"]
    }
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts", "../../types/@syn-types/index.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
