{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-standard"
    ],
    "jsRules": {
      "max-line-length": {
        "options": [ 140 ]
      }
    },
    "rules": {
      "arrow-return-shorthand": true,
      "indent": [true, "spaces"],
      "max-line-length": {
        "options": [ 120 ]
      },
      "no-unused-expression": false,
      "no-unused-expression-chai": false,
      "prefer-const": true,
      "quotemark": [ "single" ],
      "semicolon": "always",
      "no-unexpected-multiline": "error",
      "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "ignore"
      }],
      "ter-indent": [true, 2]
    },
    "rulesDirectory": [
      "tslint-no-unused-expression-chai"
    ]
}
