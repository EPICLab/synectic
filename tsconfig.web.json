{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts", 
    "src/preload/io/**/*",
    "src/preload/git/**/*",
    "src/preload/utils/**/*",
    "types/*.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": ".",
    "paths": { 
      "@renderer/*": ["src/renderer/src/*"]
    }
  }
}
